	<edmx:Reference Uri="http://docs.oasis-open.org/odata/odata/v4.0/errata03/csd01/complete/vocabularies/Org.OData.Core.V1.xml">
		<edmx:Include Namespace="Org.OData.Core.V1" Alias="OData" />
	</edmx:Reference>
	<edmx:Reference Uri="http://redfish.dmtf.org/schemas/v1/RedfishExtensions_v1.xml">
		<edmx:Include Namespace="RedfishExtensions.v1_0_0" Alias="Redfish"/>
		<edmx:Include Namespace="Validation.v1_0_0" Alias="Validation"/>
	</edmx:Reference>
	<edmx:Reference Uri="http://redfish.dmtf.org/schemas/v1/Resource_v1.xml">
		<edmx:Include Namespace="Resource"/>
		<edmx:Include Namespace="Resource.v1_0_0" />
	</edmx:Reference>
	<edmx:Reference Uri="http://redfish.dmtf.org/schemas/v1/ComputerSystem_v1.xml">
		<edmx:Include Namespace="ComputerSystem"/>
	</edmx:Reference>
	<edmx:Reference Uri="HSSInterface_v1.xml">
		<edmx:Include Namespace="HSSInterface"/>
	</edmx:Reference>

	<edmx:DataServices>
		<Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="HSSConnection">

			<EntityType Name="HSSConnection" BaseType="Resource.v1_0_0.Resource">
				<Annotation Term="OData.Description" String="This is the schema definition for the HSSConnection resource." />
				<Annotation Term="OData.LongDescription" String="This is the schema definition for the HSSConnection resource. It represents the properties of a HSSConnection." />
			</EntityType>

		</Schema>

		<Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="HSSConnection.v0_1_0">

			<EntityType Name="HSSConnection" BaseType="HSSConnection.HSSConnection">
				<Property Name="Links" Type="HSSConnection.v0_1_0.Links" Nullable="false">
					<Annotation Term="OData.Permissions" EnumMember="OData.Permission/Read"/>
					<Annotation Term="OData.Description" String="The links object contains the links to other resources that are related to this resource."/>
				</Property>
				<NavigationProperty Name="EndpointA" Type="HSSInterface.HSSInterface" Nullable="false">
					<Annotation Term="OData.Permissions" EnumMember="OData.Permission/ReadWrite"/>
					<Annotation Term="OData.Description" String="The first endpoint of this connection"/>
					<Annotation Term="OData.LongDescription" String="This object shall only contain a reference that complies to the HSSInterface schema."/>
					<Annotation Term="OData.AutoExpandReferences"/>
				</NavigationProperty>
				<NavigationProperty Name="EndpointB" Type="Resource.Item" Nullable="false">
					<Annotation Term="OData.Permissions" EnumMember="OData.Permission/ReadWrite"/>
					<Annotation Term="OData.Description" String="The second endpoint of this connection. This can either be an HSSInterface of a ComputerSystem or a PCIePort of a PCIeSwitch or a PCIePort of a Baseboard, where a PCIeDevice can be attached."/>
					<Annotation Term="OData.LongDescription" String="This object shall only contain a reference that complies to the HSSInterface or PCIePort schema."/>
					<Annotation Term="OData.AutoExpandReferences"/>
				</NavigationProperty>
				<Property Name="Width" Type="Edm.Int64">
					<Annotation Term="OData.Permissions" EnumMember="OData.Permissions/ReadWrite"/>
					<Annotation Term="OData.Description" String="Connection width of the HSSConnection specified in number of lanes"/>
					<Annotation Term="OData.LongDescription" String="The value of this property shall contain the connection width of the HSSConnection specified in number of lanes."/>
					<Annotation Term="Validation.Minimum" Int="0"/>
				</Property>
			</EntityType>

			<ComplexType Name="Links" BaseType="Resource.Links">
			</ComplexType>

		</Schema>
	</edmx:DataServices>
